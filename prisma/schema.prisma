// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider                  = "prisma-erd-generator"
  includeRelationFromFields = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vessel {
  id           Int                @id @default(autoincrement())
  name         String             @unique
  rs           Int                @unique
  station      Station?           @relation(fields: [stationId], references: [id])
  stationId    Int?
  capabilities VesselCapability[]
  class        VesselClass        @relation(fields: [classId], references: [id])
  classId      Int
  state        VesselState?       @relation(fields: [stateId], references: [id])
  stateId      Int?
}

model VesselState {
  id            Int              @id @default(autoincrement())
  name          String           @unique
  description   String?
  Vessels       Vessel[]
  legacyStateId Int?             @unique
  inUse         Boolean          @default(true)
  subStates     VesselSubState[]
}

model VesselSubState {
  id            Int          @id @default(autoincrement())
  name          String       @unique
  description   String?
  legacyStateId Int?         @unique
  inUse         Boolean      @default(true)
  parentState   VesselState? @relation(fields: [parentStateId], references: [id])
  parentStateId Int?         @unique
}

model VesselCapability {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  vessels     Vessel[]
}

model VesselClass {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  range   Int
  speed   Int
  vessels Vessel[]
}

model Station {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  vessels Vessel[]
}
